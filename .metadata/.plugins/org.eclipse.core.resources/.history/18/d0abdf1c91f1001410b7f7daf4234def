	}

	public ArrayList<Soba> getVse() {
		return vse;
	}

	public void setVse(ArrayList<Soba> vse) {
		this.vse = vse;
	}

	public ArrayList<Soba> getProste() {
		return proste;
	}

	public void setProste(ArrayList<Soba> proste) {
		this.proste = proste;
	}
	
}
