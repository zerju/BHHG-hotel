package rezervacije;

import javax.faces.bean.ManagedBean;
import javax.faces.bean.SessionScoped;
import javax.persistence.*;

@ManagedBean(name = "rezervacijaSobe")
@SessionScoped
public class RezervacijeSobe {

	@PersistenceContext
	private EntityManager em;
	
	public void shrani(Soba s){
		em.persist(n);
		n = new Napoved();
	}
	
	public ArrayList<Napoved> najdi(Napoved n){
		ArrayList<Napoved> napovedi = (ArrayList<Napoved>) em.createQuery("select n from Napoved n").getResultList();
		return napovedi;
	}
	
}
