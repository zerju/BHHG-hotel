package rezervacije;

import java.util.ArrayList;

import javax.faces.bean.ManagedBean;
import javax.faces.bean.SessionScoped;
import javax.persistence.*;

import beani.Soba;

@ManagedBean(name = "rezervacijaSobe")
@SessionScoped
public class RezervacijeSobe {

	private Soba s = new Soba();
	private ArrayList<Soba> sobe = new ArrayList<Soba>();
	
	@PersistenceContext
	private EntityManager em;
	
	public void shrani(Soba s){
		em.persist(s);
	}
	
	public ArrayList<Soba> najdi(Soba s){
		sobe = (ArrayList<Soba>) em.createQuery("select s from Soba s").getResultList();
		return sobe;
	}

	
	
	
	
	
	public Soba getS() {
		return s;
	}

	public void setS(Soba s) {
		this.s = s;
	}
	
}
